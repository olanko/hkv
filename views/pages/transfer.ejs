<!DOCTYPE html>
<html>
<head>
  <% include ../partials/header.ejs %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body>

  <% include ../partials/nav.ejs %>
<div class="jumbotron">
  <div class="container">
    <label for="sto_from">Mistä</label>
    <div class="btn-group" data-toggle="buttons">
      <label class="btn btn-primary active">
        <input type="radio" name="sto_from" value="0" id="sto_from0" autocomplete="off" checked /> Varasto
      </label>
      <label class="btn btn-primary">
        <input type="radio" name="sto_from" value="1" id="sto_from1" autocomplete="off" /> Villipeura
      </label>
      <label class="btn btn-primary">
        <input type="radio" name="sto_from" value="2" id="sto_from2" autocomplete="off" /> Villikko
      </label>
      <label class="btn btn-primary">
        <input type="radio" name="sto_from" value="3" id="sto_from3" autocomplete="off" /> Villiruusu
      </label>
    </div><br>

    <label for="sto_dest">Minne</label>
    <div class="btn-group" data-toggle="buttons">
      <label class="btn btn-primary">
        <input type="radio" name="sto_dest" value="0" id="sto_dest0" autocomplete="off" /> Varasto
      </label>
      <label class="btn btn-primary active">
        <input type="radio" name="sto_dest" value="1" id="sto_dest1" autocomplete="off" checked /> Villipeura
      </label>
      <label class="btn btn-primary">
        <input type="radio" name="sto_dest" value="2" id="sto_dest2" autocomplete="off" /> Villikko
      </label>
      <label class="btn btn-primary">
        <input type="radio" name="sto_dest" value="3" id="sto_dest3" autocomplete="off" /> Villiruusu
      </label>
    </div><br>

    <label for="product">Mitä</label>
    <select class="form-control" id="product" name="product">
        <option value="0">Olvi III plo 0,33l</option>
        <option value="1">Olvi IV plo 0,33l</option>
        <option value="2">Fizz Päärynä tölkki 0,5l</option>
    </select>
    <label for="qty">Miten paljon</label>
    <input class="form-control" type="text" id="qty" name="qty" value="24"/>

    <button type="submit" class="btn btn-lg btn-primary btn-block"><span class="glyphicon glyphicon-log-in"></span> Siirrä</button>
  </div>
</div>

<% include ../partials/footer.ejs %>
</body>
</html>
